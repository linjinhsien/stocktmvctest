@model WebApplication2.Models.Stockjson

@{
    Layout = null;
}
<link href="~/css/PagedList.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Stock</title>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h4 class="mb-3">Create Stock</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form asp-action="Create" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Code" class="form-label"></label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Peratio" class="form-label"></label>
                                <input asp-for="Peratio" class="form-control" />
                                <span asp-validation-for="Peratio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DividendYield" class="form-label"></label>
                                <input asp-for="DividendYield" class="form-control" />
                                <span asp-validation-for="DividendYield" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Pbratio" class="form-label"></label>
                                <input asp-for="Pbratio" class="form-control" />
                                <span asp-validation-for="Pbratio" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
